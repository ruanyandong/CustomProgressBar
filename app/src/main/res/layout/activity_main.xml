<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.ai.customprogressbar.HorizontalProgressbarWithProgress
            android:id="@+id/id_progress01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="0"
            android:padding="5dp"
            android:layout_marginTop="30dp">

        </com.example.ai.customprogressbar.HorizontalProgressbarWithProgress>

        <com.example.ai.customprogressbar.HorizontalProgressbarWithProgress
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="50"
            android:padding="5dp"
            android:layout_marginTop="30dp"
            app:progress_text_color="#44ff0000"
            app:progress_unreach_color="#339966">

        </com.example.ai.customprogressbar.HorizontalProgressbarWithProgress>

        <com.example.ai.customprogressbar.RoundProgressBarWithProgress
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:radius="20dp"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:progress="30"
            app:progress_text_color="#44ff0000"
            app:progress_unreach_color="#ffff0000">

        </com.example.ai.customprogressbar.RoundProgressBarWithProgress>
        <com.example.ai.customprogressbar.RoundProgressBarWithProgress
            android:id="@+id/id_progress02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:radius="60dp"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:progress="0"
            app:progress_text_color="#44ff0000"
            app:progress_unreach_color="#ffff0000">

        </com.example.ai.customprogressbar.RoundProgressBarWithProgress>

    </LinearLayout>



</ScrollView>